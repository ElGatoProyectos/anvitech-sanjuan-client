generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int     @id @default(autoincrement())
  dni       String
  full_name String
  email     String
  username  String
  password  String
  role      String
  enabled   Boolean
}

model Report {
  id            Int            @id @default(autoincrement())
  date_created  DateTime       @default(now())
  name          String
  state         String
  detailReports DetailReport[]
}

model DetailReport {
  id                     Int       @id @default(autoincrement())
  report_id              Int
  incident_id            Int?
  tardanza               String
  falta                  String
  dia                    String
  fecha_reporte          String
  dni                    String
  nombre                 String
  sede                   String
  hora_entrada           String?
  hora_inicio            String?
  hora_inicio_refrigerio String?
  hora_fin_refrigerio    String?
  hora_salida            String?
  report                 Report    @relation(fields: [report_id], references: [id])
  incident               Incident? @relation(fields: [incident_id], references: [id])
}

model Worker {
  id         Int        @id @default(autoincrement())
  full_name  String
  dni        String     @unique
  department String
  position   String
  hire_date  DateTime
  enabled    String?    @default("si")
  schedule   Schedule[]
}

model Schedule {
  id        Int    @id @default(autoincrement())
  worker_id Int
  lunes     String //08:00-17:00 -> de esta forma separamos la informacion y guardamos como string
  martes    String
  miercoles String
  jueves    String
  viernes   String
  sabado    String
  comments  String
  worker    Worker @relation(fields: [worker_id], references: [id])
}

model Incident {
  id            Int            @id @default(autoincrement())
  title         String
  description   String
  detailReports DetailReport[]
}
